{
  "name": "pesy",
  "version": "0.5.0-alpha.3",
  "description": "\"Esy Pesy\" - Your Esy Assistant.",
  "esy": {
    "build": [
      "refmterr dune build -p #{self.name}"
    ],
    "buildsInSource": "_build",
    "release": {
      "bin": [
        "pesy"
      ],
      "includePackages": [
        "root"
      ]
    }
  },
  "buildDirs": {
    "bin": {
      "bin": {
        "pesy": "Pesy.re"
      },
      "require": [
        "pesy/lib",
        "pesy/utils",
        "cmdliner"
      ]
    },
    "lib": {
      "require": [
        "str",
        "sexplib",
        "yojson",
        "pesy/utils"
      ]
    },
    "utils": {
      "require": [
        "unix",
        "str",
        "pastel/lib"
      ]
    }
  },
  "scripts": {
    "test": "esy dune runtest"
  },
  "dependencies": {
    "@esy-ocaml/reason": "*",
    "@opam/cmdliner": "*",
    "@opam/dune": "*",
    "@opam/sexplib": "v0.11.0",
    "@opam/yojson": "^1.4.1",
    "@reason-native/pastel": "^0.2.0",
    "ocaml": "4.7.x"
  },
  "devDependencies": {
    "refmterr": "*",
    "@opam/bos": "*",
    "@opam/fpath": "*",
    "@opam/merlin": "*"
  }
}
